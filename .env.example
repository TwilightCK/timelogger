# Copy this to .env and fill values. Do NOT commit .env

# --- Wallet / Deployment ---
PRIVATE_KEY=your_private_key_here_without_0x
# Optional: mnemonic instead of private key
# MNEMONIC="twelve word mnemonic here"

# --- RPC Endpoints ---
RPC_URL=https://coston2-api.flare.network/ext/bc/C/rpc
NEXT_PUBLIC_RPC_URL=https://coston2-api.flare.network/ext/bc/C/rpc

# --- Contract (put deployed address after deploy) ---
CONTRACT_ADDRESS=0xREPLACE_WITH_DEPLOYED_ADDRESS

# --- Database (Postgres) ---
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public

# --- Web3.storage or IPFS (optional) ---
WEB3_STORAGE_API_KEY=your_web3_storage_api_key_here

# --- Optional: analytics / monitoring keys ---
SENTRY_DSN=
